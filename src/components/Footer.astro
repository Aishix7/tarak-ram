---
import EmailSignup from "./EmailSignup.astro";


const currentYear = new Date().getFullYear();


const footerLinks = {
  LINKS: [
    { text: 'Newsletter', href: '/newsletter' },
    { text: 'About', href: '/about' },
    { text: 'Blogs', href: '/blogs' }
  ],
  MORE: [
   
    { text: 'Podcast', href: '/podcast' },
  ]
};


const socialLinks = [
  { platform: 'twitter', href: 'https://x.com/Tarak__Ram' },
  { platform: 'instagram', href: 'https://www.instagram.com/tarak.ram_18/' },
  { platform: 'linkedin', href: 'https://www.linkedin.com/in/tarakram18/' },
  { platform: 'youtube', href: 'https://www.youtube.com/@tarakram.18' },
];
---


<footer class="footer">
  <div class="container footer-content">
    <div class="footer-grid">
      {Object.entries(footerLinks).map(([category, links]) => (
        <div class="footer-column">
          <h3>{category}</h3>
          <ul>
            {links.map(link => (
              <li>
                <a href={link.href}>{link.text}</a>
              </li>
            ))}
          </ul>
        </div>
      ))}
      <div class="footer-column connect-column">
        <h3>CONNECT WITH ME</h3>
        <a href="mailto:contact@tarakram.com" class="connect-button">
          Contact Me
        </a>
      </div>
    </div>


    <div class="footer-bottom">
      <div class="social-links">
        {socialLinks.map(link => (
          <a href={link.href} class="social-link" aria-label={`Follow on ${link.platform}`} target="_blank" rel="noopener noreferrer">
            <img src={`/images/social/${link.platform}.svg`} alt="" />
          </a>
        ))}
      </div>


      <div class="footer-legal">
        <p>&copy; Tarak Ram {currentYear}. All Rights Reserved</p>
        <div class="legal-links">
          <a href="/privacy">Privacy Policy</a>
          <span>|</span>
          <a href="/cookies">Cookie Policy</a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: black;
    color: white;
    padding: 4rem 0 2rem;
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }

  .footer-grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  }

  .footer-column h3 {
    color: #9CA3AF;
    font-size: 0.875rem;
    margin-bottom: 1rem;
  }

  .footer-column ul {
    list-style: none;
  }

  .footer-column a {
    color: white;
    text-decoration: none;
    font-size: 0.875rem;
    line-height: 2;
  }

  .footer-column a:hover {
    color: var(--primary-color);
  }

  .footer-bottom {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding-top: 2rem;
    border-top: 1px solid #374151;
  }

  .connect-column {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }


  .connect-button {
    display: inline-block;
    background-color: var(--primary-color);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
    text-decoration: none;
    font-size: 0.875rem;
    transition: background-color 0.2s;
  }


  .connect-button:hover {
    background-color: var(--primary-color-dark);
  }

  .social-links {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: black;
    transition: background-color 0.2s;
  }

  
  .footer-legal {
    text-align: center;
    font-size: 0.875rem;
    color: #9CA3AF;
  }

  .legal-links {
    margin-top: 0.5rem;
  }

  .legal-links a {
    color: #9CA3AF;
    text-decoration: none;
  }

  .legal-links span {
    margin: 0 0.5rem;
  }

  @media (min-width: 768px) {
    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }

    .social-links {
      order: 2;
    }

    .footer-legal {
      order: 1;
      text-align: left;
    }
  }
</style>