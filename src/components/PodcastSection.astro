---
const podcastEpisodes = [
  {
    title: 'How to Make $10k/Month as a Writer – Nicolas Cole',
    date: 'June 27, 2024',
    thumbnail: '/images/podcasts/writer-episode.jpg',
    overlayText: 'you don\'t need followers',
    link: '/podcast/writer-nicolas-cole'
  },
  {
    title: 'How to Land your Dream Job – Chats with my Team – Kaelyn Grace Apple',
    date: 'June 20, 2024',
    thumbnail: '/images/podcasts/dream-job-episode.jpg',
    overlayText: 'strategic networking',
    link: '/podcast/dream-job-kaelyn'
  }
];
---

<section class="podcast-section">
  <div class="container">
    <h2>Deep Dive Podcast</h2>
    <div class="episodes-grid">
      {podcastEpisodes.map(episode => (
        <a href={episode.link} class="episode-card">
          <div class="thumbnail-wrapper">
            <img 
              src={episode.thumbnail} 
              alt={episode.title}
              class="episode-thumbnail"
              width="600"
              height="338"
            />
            <div class="overlay-text">{episode.overlayText}</div>
          </div>
          <div class="episode-info">
            <h3>{episode.title}</h3>
            <time datetime={episode.date}>{episode.date}</time>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .podcast-section {
    padding: 4rem 0;
    background: white;
  }

  h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
    position: relative;
  }

  h2::after {
    content: '';
    position: absolute;
    bottom: -1rem;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 4px;
    background: var(--primary-color);
  }

  .episodes-grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    max-width: 1200px;
    margin: 0 auto;
  }

  .episode-card {
    text-decoration: none;
    color: inherit;
    background: white;
    border-radius: 1rem;
    overflow: hidden;
    transition: transform 0.2s;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
                0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  .episode-card:hover {
    transform: translateY(-5px);
  }

  .thumbnail-wrapper {
    position: relative;
    aspect-ratio: 16/9;
    overflow: hidden;
  }

  .episode-thumbnail {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .overlay-text {
    position: absolute;
    bottom: 1rem;
    left: 1rem;
    background: rgba(0, 0, 0, 0.7);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-size: 1.25rem;
    font-weight: bold;
  }

  .episode-info {
    padding: 1.5rem;
  }

  h3 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
    line-height: 1.4;
  }

  time {
    color: #6B7280;
    font-size: 0.875rem;
  }

  @media (min-width: 768px) {
    .episodes-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>